<h1>Add a New Director</h1>

<form action="/create_director">
    <div>
        <label for="director_name_input">
        Name
            
        </label>
            <input id="director_name_input" type="text", name="director_name">
    </div>
    
    <div>
        <label for="director_bio_input">
        Bio    
            
            <div class="col-sm-10">
              <textarea id="director_bio_input" name="director_bio" placeholder="Bio" class="form-control" rows="3"></textarea>
            </div>
    </div>
    
    <div>
        <label for="director_name_input">
        Dob
            
        </label>
            <input id="director_name_input" type="text", name="director_dob">
    </div>
    
    <div>
        <label for="director_image_input">
        Image url
            
        </label>
            
            <div class="col-sm-10">
              <textarea id="director_image_input" name="director_image" placeholder="Bio" class="form-control" rows="1"></textarea>
            </div>
    </div>
    
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <p><a href="/directors/<%= @director.id %>" class="btn btn-primary">Update Director</a></p>
    </div>
  </div>
  
</form>


