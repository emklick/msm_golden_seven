<h1>Edit Movie <%= @movie.id %></h1>

<form action="/update_movie/<%= @movie.id %>">
  <div>
        <label for="title_input">
        Title
            
        </label>
            <input id="title_input" type="text", name="movie_title", value="<%= @movie.title %>">
    </div>
    
    <div>
        <label for="year_input">
        Year    
            
        </label>
            <input id="year_input" type="text", name="movie_year", value="<%= @movie.year %>">
    </div>
    
     <div>
        <label for="duration_input">
        Duration (Minutes)
            
        </label>
            <input id="duration_input" type="text", name="movie_duration", value="<%= @movie.duration %>">
    </div>
    
    <div>
        <label for="description_input">
        Description
            
        </label>
            <input id="description_input" type="text", name="movie_description", value="<%= @movie.description %>">
    </div>
    
    <div>
        <label for="movie_image_input">
        Image url
            
        </label>
            <input id="movie_image_input" type="text", name="movie_image" value="<%= @movie.image_url %>">
    </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <p><a href="/movies/<%= @movie.id %>" class="btn btn-primary">Update Movie</a></p>
    </div>
  </div>
  
</form>

